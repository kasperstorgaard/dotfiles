{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "node_modules/**": true,
        "bower_components/**": true,
        ".tmp/**": true,
        "hooks/**": true
    },
    "eslint.options": {
        "ext": [".es6", ".html"]
    },
    "javascript.validate.enable": false,
    "window.zoomLevel": 0,
    "tslint.exclude": "./node_modules/**/*.*",
    "tslint.run": "onSave",
    "typescript.check.workspaceVersion": false
}
