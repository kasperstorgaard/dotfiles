"--- files ---"
set encoding=utf-8
set fileencodings=utf-8
set fileformats=unix,dos,mac

"--- dirs ---"
set backupdir=~/.vim/backup//
set directory=~/.vim/swap//
set undodir=~/.vim/undo//

"--- syntax ---"
filetype plugin on
syntax enable
syntax on
set showcmd
set cursorline

"--- Tmux copy-paste ---"
set clipboard=unnamed